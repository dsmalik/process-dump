<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net462;net472;netcoreapp2.2</TargetFrameworks>
    <Version>1.0.4</Version>
    <Authors>dsmalik</Authors>
    <Description>Provides support for taking memory dump for the specified process.</Description>
    <PackageProjectUrl>https://github.com/dsmalik/process-dump</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dsmalik/process-dump.git</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>win32 memory-dumps</PackageTags>

    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>symbols.nupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta2-19554-01">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
